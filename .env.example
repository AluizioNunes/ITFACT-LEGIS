# Project Configuration
COMPOSE_PROJECT_NAME=legis

# Database Configuration (PostgreSQL)
POSTGRES_DB=LEGIS
POSTGRES_USER=LEGIS
POSTGRES_PASSWORD=LEGIS
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# Redis Configuration
REDIS_PASSWORD=LEGIS
REDIS_URL=redis://redis:6379

# MongoDB Configuration
MONGO_ROOT_USER=LEGIS
MONGO_ROOT_PASSWORD=LEGIS
MONGODB_URL=mongodb://${MONGO_ROOT_USER}:${MONGO_ROOT_PASSWORD}@mongodb:27017

# Neo4j Configuration
NEO4J_USER=LEGIS
NEO4J_PASSWORD=LEGIS
NEO4J_URI=bolt://neo4j:7687

# RabbitMQ Configuration
RABBITMQ_USER=LEGIS
RABBITMQ_PASS=LEGIS
RABBITMQ_URL=amqp://${RABBITMQ_USER}:${RABBITMQ_PASS}@rabbitmq:5672

# MinIO/S3 Configuration
MINIO_ROOT_USER=LEGIS
MINIO_ROOT_PASSWORD=LEGIS
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=${MINIO_ROOT_USER}
MINIO_SECRET_KEY=${MINIO_ROOT_PASSWORD}

# NestJS Configuration
NODE_ENV=development
PORT=3001
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=7d

# FastAPI Configuration
PYTHON_ENV=development
FASTAPI_PORT=8000

# Next.js Configuration
NEXT_PUBLIC_API_URL=http://localhost/api
NEXT_PUBLIC_WS_URL=ws://localhost

# AI/ML Configuration
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Application Settings
APP_NAME=ITFACT LEGIS
APP_VERSION=1.0.0
